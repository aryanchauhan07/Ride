            <button onclick="myFunction()" class="noe"><span>Ride now</span></button>
            <div id="myDIV" class="hidden">
                <form id="rideForm" action="/getPrice" method="post">
                    <h1>Ride on Time</h1>
                    <p>request a ride</p>
        
                    <div class="location">
                        <div class="inputbox">
                            <i class="fa-solid fa-location-dot"></i>
                            <input type="text" name="location" placeholder="Enter Location">
                        </div>
        
                        <div class="inputbox">
                            <i class="fa-solid fa-location-pin"></i>
                            <input type="text" name="destination" placeholder="Enter Destination">
                        </div>
                    </div>
        
                    <div class="price">
                        <button type="submit">See Price</button>
